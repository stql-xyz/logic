/* client/pages/my/my.wxss */
.page {
  background: var(--page-bg);
  min-height: 100vh;
  color: var(--theme-color);
}
.top {
  width: 100vw;
  padding: var(--space-2) 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 10px;
}
.name {
  color: var(--theme-color);
}

.page .iconfont {
  font-size: 44rpx;
  color: var(--like);
}