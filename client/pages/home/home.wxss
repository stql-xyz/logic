  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: var(--page-bg);
  color: var(--theme-color);
}
.category {
  width: 60vw;
  padding: var(--space-3);
  line-height: 100%;
  text-align: center;
  margin: var(--space-2);
  background: var(--question-bg);
}